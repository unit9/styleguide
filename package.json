{
  "name": "unit9-styleguide",
  "version": "2.0.0",
  "description": "UNIT9's frontend styleguide",
  "repository": {
    "type": "git",
    "url": "https://github.com/unit9/styleguide"
  },
  "keywords": [
    "styleguide",
    "unit9"
  ],
  "author": "Damien Seguin",
  "license": "ISC",
  "homepage": "https://github.com/unit9/styleguide#readme",
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "eslint": "^4.7.2",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "prettier": "^1.7.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": false
      }
    }
  },
  "eslintIgnore": [
    "node_modules"
  ]
}
